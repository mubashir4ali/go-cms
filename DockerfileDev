# FROM golang:1.23-alpine
FROM golang:1.24-alpine

WORKDIR /app

COPY cms-api/go.mod cms-api/go.sum ./
RUN go mod tidy

# Install a hot-reload tool (Air is common)
# RUN go install github.com/cosmtrek/air@latest
# RUN go install github.com/cosmtrek/air@v1.61.6
RUN go install github.com/air-verse/air@latest

# Copy source code
COPY cms-api/ .

EXPOSE 8080

# Use Air for auto-reload
CMD ["air", "-c", ".air.toml"]
